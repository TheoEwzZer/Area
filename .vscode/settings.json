{
  "prettier.tabWidth": 2,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*",
        "cmd": "npx prettier --write ."
      }
    ]
  }
}
