generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ServiceType {
  YOUTUBE
  OUTLOOK
  GITHUB
  DISCORD
  GOOGLE_CALENDAR
}

model Area {
  id         Int      @id @default(autoincrement())
  userId     String
  actionId   Int
  reactionId Int
  action     Action   @relation(fields: [actionId], references: [id])
  reaction   Reaction @relation(fields: [reactionId], references: [id])
}

model Action {
  id          Int         @id @default(autoincrement())
  service     ServiceType
  name        String
  description String
  areas       Area[]
}

model Reaction {
  id          Int         @id @default(autoincrement())
  service     ServiceType
  name        String
  description String
  areas       Area[]
}

model Service {
  id           Int         @id @default(autoincrement())
  accessToken  String
  refreshToken String
  userId       String
  service      ServiceType
}
