generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ServiceType {
  YOUTUBE
  GMAIL
  GITHUB
  DISCORD
  GOOGLE_CALENDAR
}

model Area {
  id         Int      @id @default(autoincrement())
  userId     String
  actionId   Int
  reactionId Int
  action     Action   @relation(fields: [actionId], references: [id])
  reaction   Reaction @relation(fields: [reactionId], references: [id])
}

model Action {
  id          Int         @id @default(autoincrement())
  service     ServiceType
  name        String
  description String
  areas       Area[]
}

model Reaction {
  id          Int         @id @default(autoincrement())
  service     ServiceType
  name        String
  description String
  areas       Area[]
}

model Service {
  id           Int         @id @default(autoincrement())
  accessToken  String
  refreshToken String?
  userId       String
  service      ServiceType
}

model ServiceInfo {
  id          Int               @id @default(autoincrement())
  type        ServiceType       @unique
  color       String
  image_url   String
  description String
  actions     ServiceAction[]
  reactions   ServiceReaction[]
}

model ServiceAction {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  serviceInfo   ServiceInfo @relation(fields: [serviceInfoId], references: [id])
  serviceInfoId Int
}

model ServiceReaction {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  serviceInfo   ServiceInfo @relation(fields: [serviceInfoId], references: [id])
  serviceInfoId Int
}
